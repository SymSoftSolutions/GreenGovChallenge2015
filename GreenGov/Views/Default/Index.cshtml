                </div>
                <div class="data-description">Total Gigawatts of electricity used/div>
            </div>
            <!-- Chart Here -->
            <div id='totalelec' style="width:255px;height:120px">
            </div>
        </div>

        <div class="col-sm-6 col-md-3">
            <div class="data-dashboard">
                <div>
                    <span class="glyphicon glyphicon-flash data-type-energy"></span>
