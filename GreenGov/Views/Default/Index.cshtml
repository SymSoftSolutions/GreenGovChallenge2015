            </div>
            <!-- Chart Here -->
            <div id='totalenergy' style="width:255px;height:120px">

            </div>
        </div>

        <div class="col-sm-6 col-md-3">
            <div class="data-dashboard">
                <div>
                    <span class="glyphicon glyphicon-globe data-type-co2e"></span>
                    <span class="data-value">15 Million</span>
